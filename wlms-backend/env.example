APP_NAME=SystemECOM
ENV=dev

# API
API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Frontend base URL (used for email links)
FRONTEND_BASE_URL=http://localhost:3000

# Notifications (email) toggles
NOTIFY_INBOUND_RECEIVED_EMAIL=false
NOTIFY_OUTBOUND_DISPATCHED_EMAIL=false
NOTIFY_INVOICE_ISSUED_EMAIL=true

# Security (replace in real env; do not commit secrets)
JWT_SECRET=change_me
ACCESS_TOKEN_EXPIRES_MINUTES=30
REFRESH_TOKEN_EXPIRES_DAYS=14

# Database (phase 1)
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/systemecom

# Redis (phase 1)
REDIS_URL=redis://localhost:6379/0

# File storage (LOCAL / S3 / MINIO)
FILE_STORAGE_PROVIDER=LOCAL
FILE_STORAGE_ROOT=.storage

# S3 / MinIO (used when FILE_STORAGE_PROVIDER != LOCAL)
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minio
S3_SECRET_ACCESS_KEY=minio12345
S3_BUCKET=systemecom




