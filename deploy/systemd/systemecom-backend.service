[Unit]
Description=SystemECOM Backend (FastAPI)
After=network.target

[Service]
Type=simple
WorkingDirectory=/opt/systemecom/wlms-backend
EnvironmentFile=/etc/systemecom/backend.env
ExecStart=/opt/systemecom/wlms-backend/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target


